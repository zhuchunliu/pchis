@import './var'

html, body, ul, li
  margin 0
  padding 0
  color $Black
  font-size 14px
  font-weight 500
  line-height 1
  font-family 'Microsoft YaHei', arial, sans-serif, 'Droid Sans Fallback'

a
  color $Blue
  text-decoration none
  outline none

div, a
  -webkit-tap-highlight-color transparent

i
  font-style normal

input, textarea, select
  padding 0
  margin 0
  border 0
  outline none
  -webkit-appearance none

input[disabled], input:disabled
  background $White

input::-webkit-input-placeholder, textarea::-webkit-input-placeholder,
input:-webkit-input-placeholder, textarea:-webkit-input-placeholder,
input::-moz-placeholder, textarea::-moz-placeholder,
input:-moz-placeholder, textarea:-moz-placeholder,
input:-ms-input-placeholder, textarea:-ms-input-placeholder
  color #0f0 !important

.el-scrollbar__wrap:not(.el-select-dropdown__wrap)
  overflow-x hidden !important
.el-tabs--border-card
  box-shadow none !important
.el-tabs--border-card>.el-tabs__header .el-tabs__item.is-active,
.el-tabs--border-card>.el-tabs__header .el-tabs__item:hover
  color: $lBlack !important
.el-tabs--border-card>.el-tabs__header
  background: $dWhite !important
.el-button--mini
  padding: 5px 10px !important
.el-dialog--center .el-dialog__header
  padding-top 20px !important
  border-bottom 1px solid $elSilver !important
  .dialogtitle
    font-size 18px
    padding-bottom 5px
.pagecontent
  padding 20px
  box-sizing border-box

.el-table__expanded-cell
  padding 0 !important

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance none !important
  margin 0

// // table四周边框
// .el-table--border,.el-table--group{border:1px solid red}

// table内竖线
.el-table--border td,.el-table--border th
  border-right 0 !important

// // table内横线
// .el-table td,.el-table th.is-leaf{border-bottom:1px solid red}

// table内斑马线颜色
.el-table--striped .el-table__body tr.el-table__row--striped td
  background #f9fcf6 !important

.el-table--striped .el-table__body tr.el-table__row--striped.current-row td,
.el-table__body tr.current-row>td,.el-table__body tr.hover-row.current-row>td,
.el-table__body tr.hover-row.el-table__row--striped.current-row>td,
.el-table__body tr.hover-row.el-table__row--striped>td,
.el-table__body tr.hover-row>td
  background-color #b5ecfa !important

.el-table th
  background #f2f2f2 !important

// table头部颜色
.el-table thead
  color #666 !important
  font-weight 500 !important

// table鼠标放上去后的颜色
.el-table--enable-row-hover .el-table__body tr:hover>td 
  background-color #b5ecfa !important

.valided
  color $Blue

.el-submenu .el-menu-item
  min-width 180px

// 设置message的位置
.el-message
  top 40%

.el-table--scrollable-y .el-table__body-wrapper::-webkit-scrollbar 
  width 8px
  height 8px
  background-color $White

.el-table--scrollable-y .el-table__body-wrapper::-webkit-scrollbar-track 
  -webkit-box-shadow inset 0 0 6px $White
          box-shadow inset 0 0 6px $White
  border-radius 5px
  background-color $White

.el-table--scrollable-y .el-table__body-wrapper::-webkit-scrollbar-thumb 
  -webkit-box-shadow inset 0 0 6px #e5e5e5
          box-shadow inset 0 0 6px #e5e5e5
  border-radius 5px
  background-color rgba(128,128,128,0.5)

.el-table--scrollable-y .el-table__body-wrapper::-webkit-scrollbar-thumb:hover
  background-color rgba(128,128,128,1)
